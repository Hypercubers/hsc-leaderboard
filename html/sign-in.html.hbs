            <label for="email">Email</label>
            <input type="email" id="email" name="email" required />
            <label for="otp">OTP</label>
            <input type="text" id="otp" name="otp" />
          </fieldset>
          <button>Get OTP / Sign in</button>
        </form> --}}
      </div>
    </div>

  {{/inline}}
{{/layout}}
